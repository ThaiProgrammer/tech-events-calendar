{
  "workspaces": [
    "website"
  ],
  "dependencies": {
    "axios": "^0.17.1",
    "common-tags": "^1.7.2",
    "escape-html": "^1.0.3",
    "flow-bin": "^0.62.0",
    "format-json": "^1.0.3",
    "front-matter": "^2.3.0",
    "glob": "^7.1.2",
    "icalendar": "^0.7.1",
    "indent-string": "^3.2.0",
    "js-yaml": "^3.10.0",
    "mkdirp": "^0.5.1",
    "pegjs": "^0.10.0"
  },
  "private": "true",
  "scripts": {
    "build-json": "node scripts/generate-json.js",
    "build": "yarn run build-json && node scripts/generate-svg.js && node scripts/generate-ics.js && (cd website && yarn run build) && cp -Rv website/dist/index.html website/dist/static public",
    "lint": "standard",
    "netlify": "(curl -o- -L https://yarnpkg.com/install.sh | bash) && ~/.yarn/bin/yarn && yarn run build",
    "dev": "cd website && yarn dev",
    "test": "jest",
    "snapshot": "jest --updateSnapshot"
  },
  "devDependencies": {
    "jest": "^22.3.0",
    "pretty-format": "^22.1.0",
    "standard": "^11.0.0"
  },
  "standard": {
    "ignore": [
      "website/dist",
      "public/static"
    ]
  }
}
